/*Cuarta Pantalla*/
.imagen-superpuesta {
    position: relative;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.img-fondo {
    width: 90%;
    height: auto;
    display: block;
}

